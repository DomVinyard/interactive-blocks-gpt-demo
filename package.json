{
  "name": "@lyonbot/interactive-blocks",
  "version": "1.0.6",
  "description": "Make interactive selectable, drag-and-drop, copy-and-paste ready, Block and Slot components easily! Works with Vue, React and any MV* framework.",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "unpkg": "./dist/index.umd.js",
  "module": "./dist/index.module.js",
  "exports": "./dist/index.modern.js",
  "types": "./index.d.ts",
  "amdName": "InteractiveBlocks",
  "scripts": {
    "clean": "rimraf dist types example/dist",
    "prepack": "run-s clean build:lib",
    "build": "run-s build:lib build:example",
    "dev": "run-p dev:*",
    "build:lib": "microbundle",
    "dev:lib": "microbundle watch --compress false",
    "build:example": "vite -c example/vite.config.js build",
    "dev:example": "vite -c example/vite.config.js --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lyonbot/interactive-blocks.git"
  },
  "files": [
    "dist",
    "types",
    "/index.d.ts",
    "/docs"
  ],
  "keywords": [
    "interactive",
    "block",
    "slot",
    "component",
    "drag and drop",
    "multiple select",
    "select",
    "keyboard shortcuts",
    "copy",
    "dataTransfer",
    "clipboard"
  ],
  "author": "lyonbot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lyonbot/interactive-blocks/issues"
  },
  "homepage": "https://github.com/lyonbot/interactive-blocks#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "microbundle": "^0.13.3",
    "npm-run-all": "^4.1.5",
    "preact": "^10.5.14",
    "requirejs": "^2.3.6",
    "rimraf": "^3.0.2",
    "stylus": "^0.58.1",
    "typescript": "^4.4.3",
    "vite": "^2.6.5"
  }
}
