{
  "name": "copyable-blocks",
  "version": "1.0.0",
  "description": "Select, copy and paste your elements as if a large text input",
  "source": "./src/index.ts",
  "main": "./dist/index.js",
  "unpkg": "./dist/index.umd.js",
  "module": "./dist/index.module.js",
  "exports": "./dist/index.modern.js",
  "types": "./index.d.ts",
  "amdName": "CopyableBlocks",
  "scripts": {
    "clean": "rimraf dist types example/dist",
    "prepack": "npm run clean && npm run build:lib",
    "build": "build:*",
    "dev": "run-p dev:*",
    "build:lib": "microbundle",
    "dev:lib": "microbundle watch",
    "build:example": "vite -c example/vite.config.js build",
    "dev:example": "vite -c example/vite.config.js --open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lyonbot/copyable-blocks.git"
  },
  "files": [
    "dist",
    "types",
    "/index.d.ts"
  ],
  "keywords": [],
  "author": "lyonbot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lyonbot/copyable-blocks/issues"
  },
  "homepage": "https://github.com/lyonbot/copyable-blocks#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eventemitter3": "^4.0.7",
    "microbundle": "^0.13.3",
    "npm-run-all": "^4.1.5",
    "preact": "^10.5.14",
    "requirejs": "^2.3.6",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.3",
    "vite": "^2.6.5"
  },
  "dependencies": {
    "lodash.debounce": "^4.0.8",
    "tiny-typed-emitter": "^2.1.0"
  }
