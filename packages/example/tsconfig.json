{
  "compilerOptions": {
    "module": "amd",
    "moduleResolution": "node",
    "target": "ES2019",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": true,
    "jsx": "react",
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@lyonbot/interactive-blocks": ["../interactive-blocks/src/index.ts"],
      "@lyonbot/interactive-blocks-react": ["../interactive-blocks-react/src/index.ts"]
    }
  },
  "references": [
    { "path": "../interactive-blocks/tsconfig.json" },
    { "path": "../interactive-blocks-react/tsconfig.json" }
  ],
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
