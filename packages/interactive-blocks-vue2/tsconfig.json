{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "ES2019",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": true,
    "composite": true,
    "declaration": true,
    "stripInternal": true,
    "baseUrl": ".",
    "paths": {
      "@lyonbot/interactive-blocks": ["../interactive-blocks/src/index.ts"]
    }
  },
  "references": [{ "path": "../interactive-blocks/tsconfig.json" }],
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
