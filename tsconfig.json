{
  "compilerOptions": {
    "rootDir": "src",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2019",
    "strict": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "useDefineForClassFields": true,
    "composite": true,
    "declarationDir": "types"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
